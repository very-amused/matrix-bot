{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "typeRoots": ["types", "node_modules/@types"],
    "outDir": "build"
  },
  "include": ["src/*.ts"]
}