{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["types", "node_modules/@types"],
    "outDir": "build",
  },
  "include": ["src/*.ts"]
}